<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="someUniqueId" author="Andranik">
        <sql>CREATE TYPE status AS ENUM ('NEW','IN_PROGRESS','COMPLETED')</sql>
        <createTable tableName="project">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="project_status" type="status">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="contact">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(350)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="int">
                <constraints foreignKeyName="fk_contact_project" references="project(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>